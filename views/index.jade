extends layout

block content
    .row.mt-5
        .col-4
        .col-4
            // Material form login
            form#loginForm
                p.h4.text-center.mb-4 Log in
                // Material input email
                .md-form
                    i.fa.fa-user.prefix.grey-text
                    input#materialFormUsername.form-control(type='text', name='username')
                    label(for='materialFormUsername') Nome utente
                // Material input password
                .md-form
                    i.fa.fa-lock.prefix.grey-text
                    input#materialFormPassword.form-control(type='password', name='password')
                    label(for='materialFormPassword') Password
                .text-center.mt-4
                    input.submit.btn.btn-info(type="submit" value="Login")
                .text-center.mt-4
                    a(target='_blank', href='http://localhost:3000/registrazione')  Registrati
                // Material form login
        .col-4
    .row.mt-5
        .col-md-3
        .col-md-6
            img.img-fluid(src='/img/loginTooltip.png', alt='Responsive image')
        .col-md-3
    // /Start your project here

    // SCRIPT controller
    script(type='text/javascript', src='/javascript/indexController.js')