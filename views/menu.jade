block body
    body#top.hidden-sn.mdb-skin
        header
            #slide-out.side-nav.sn-bg-4.mdb-sidenav
                ul.custom-scrollbar.list-unstyled
                    li
                        .logo-wrapper.waves-light(style='height:100px;')
                            a(href="home")
                                img.img-fluid.flex-center(src='/img/iconmenu.png')
                    li
                        ul
                            li
                                ul
                                    li
                                        a.textnavbar(href='home') Home
                                    li
                                        a.textnavbar(href='prenotazione') Prenota
                                    li
                                        a.textnavbar(href='appuntamenti') Lista appuntamenti
                                    li
                                        a.textnavbar(href='rubrica') Lista contatti
                    //li
                        ul.collapsible.collapsible-accordion
                            li
                                a.collapsible-header.waves-effect.arrow-r
                                    i.fa.fa-desktop
                                    |  Client
                                    i.fa.fa-angle-down.rotate-icon
                                .collapsible-body
                                    ul
                                        li
                                            a.waves-effect(href='#{addClientUrl}') Associa Utente a Client
                                        li
                                            a.waves-effect(href='#{listClientUrl}') Lista Client
                            li
                                a.collapsible-header.waves-effect.arrow-r
                                    i.fa.fa-user-o
                                    |  Utenti
                                    i.fa.fa-angle-down.rotate-icon
                                .collapsible-body
                                    ul
                                        li
                                            a.waves-effect(href='#{addUserUrl}') Aggiungi Utente
                                        li
                                            a.waves-effect(href='#{listUserUrl}') Lista Utenti
                            li
                                a.collapsible-header.waves-effect.arrow-r
                                    i.fa.fa-lock
                                    |  Gestione Token
                                    i.fa.fa-angle-down.rotate-icon
                                .collapsible-body
                                    ul
                                        li
                                            a.waves-effect(href='#') Elimina Token Scaduti
                                        li
                .sidenav-bg.mask-strong
            nav.navbar.fixed-top.navbar-toggleable-md.navbar-expand-lg.scrolling-navbar.double-nav
                .float-left
                    a.button-collapse(href='', data-activates='slide-out')
                        i.fa.fa-bars.textnavbar
                .breadcrumb-dn.mr-auto
                    p Ecupt
                ul.nav.navbar-nav.nav-flex-icons.ml-auto
                    //li.nav-item
                        a.nav-link
                            i.fa.fa-user
                            span.clearfix.d-none.d-sm-inline-block Account
                    li.nav-item
                        a#logout.textnavbar.nav-link
                            i.fa.fa-times
                            span.clearfix.d-none.d-sm-inline-block Logout

