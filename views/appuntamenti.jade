block title
    title Lista Appuntamenti
block style
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(href='/stylesheet/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheet/mdb.min.css', rel='stylesheet')
    link(href='/stylesheet/style.css', rel='stylesheet')
    link(href='https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css ', rel='stylesheet')
    link(href='https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css', rel='stylsheet')


block content
    .container-fluid
        .row
            .col
                select#selectContatto.mdb-select.colorful-select.dropdown-ins(searchable="Cerca...")
        .row
            .col-sm-12
                .progress#barra.primary-color-dark
                    .indeterminate
                label#labelNessunAppuntamento
            .col#test.table-responsive
                table#tableAppuntamenti.table.table-striped
                    thead.mdb-color.darken-3
                        tr.text-white
                            th
                            th Impegnativa
                    tbody
            #centralModalDanger.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
              .modal-dialog.modal-notify.modal-danger(role='document')
                // Content
                .modal-content
                  // Header
                  .modal-header
                    p.heading.lead ATTENZIONE
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span.white-text(aria-hidden='true') Ã—
                  // Body
                  .modal-body
                    .text-center
                      i.fa.fa-close.fa-4x.mb-3.animated.rotateIn
                      p#labelEliminaImpegnativa
                  // Footer
                  .modal-footer.justify-content-center
                    a.btn.btn-danger(type='button')
                        |Si
                    a.btn.btn-outline-danger.waves-effect(type='button', data-dismiss='modal')
                        |No
                // /.Content
            // Central Modal Medium Danger




